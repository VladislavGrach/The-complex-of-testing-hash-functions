@model IEnumerable<The_complex_of_testing_hash_functions.Models.RainbowTable>

@{
    ViewData["Title"] = "Rainbow Tables";
}

<h1>Список радужных таблиц</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Длина цепочки</th>
            <th>Размер таблицы</th>
            <th>Хеш-функция</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.ChainLength</td>
                <td>@item.TableSize</td>
                <td>@item.HashFunction?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Подробнее</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Вы уверены?');">
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Создать новую таблицу</a>