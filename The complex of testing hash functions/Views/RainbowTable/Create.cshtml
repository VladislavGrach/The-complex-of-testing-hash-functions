@{
    ViewData["Title"] = "Создание радужной таблицы";
}
<h1>Создание радужной таблицы</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Выберите хеш-функцию</label>
        <select name="algorithmType" class="form-control">
            @foreach (var hashFunction in ViewBag.HashFunctions)
            {
                <option value="@hashFunction.AlgorithmType">@hashFunction.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Длина цепочки редукции</label>
        <input type="number" name="chainLength" class="form-control" value="0" />
    </div>

    <div class="form-group">
        <label>Размер таблицы</label>
        <input type="number" name="tableSize" class="form-control" value="1000" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Создать</button>
</form>