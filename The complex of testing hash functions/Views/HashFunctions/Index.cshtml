@model List<The_complex_of_testing_hash_functions.Models.HashFunction>
@{
    ViewData["Title"] = "Hash Functions";
}

<h1>Хеш-функции</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить новую хеш-функцию</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Полное название</th>
            <th>Алгоритм</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.AlgorithmType</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детали</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>